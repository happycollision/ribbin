# Test container for ribbin
# All tests run inside this container to prevent any damage to the host machine
FROM golang:1.23-alpine

# Install basic dependencies
RUN apk add --no-cache bash coreutils curl git

# Install Node.js and npm for node_modules tests
RUN apk add --no-cache nodejs npm

# Install pnpm globally
RUN npm install -g pnpm

# Install mise (version manager - uses symlink-based shims)
RUN curl https://mise.run | sh
ENV PATH="/root/.local/bin:${PATH}"

# Install asdf (version manager - uses shell script shims)
RUN git clone https://github.com/asdf-vm/asdf.git /root/.asdf --branch v0.14.0
ENV PATH="/root/.asdf/shims:/root/.asdf/bin:${PATH}"

# Install gotestsum for better test output (v1.12.0 supports Go 1.23)
RUN go install gotest.tools/gotestsum@v1.12.0

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .

# Copy schemas for go:embed (canonical source is schemas/v1/)
RUN mkdir -p internal/config/schemas/v1 && cp schemas/v1/*.json internal/config/schemas/v1/

CMD ["gotestsum", "--format", "testdox", "./..."]
