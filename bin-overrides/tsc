#!/usr/bin/env bash

if [[ "$TSC" == "ok" ]]; then
  exec "$(mise which tsc)" "$@"
fi

cat >&2 <<'EOF'
┌─────────────────────────────────────────────────────────┐
│  ERROR: Direct use of tsc is not allowed.               │
│                                                         │
│  Use instead:                                           │
│    pnpm run build       # for production build          │
│    pnpm run typecheck   # for type checking only        │
└─────────────────────────────────────────────────────────┘
EOF
exit 1
